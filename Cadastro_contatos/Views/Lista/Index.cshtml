@model IEnumerable<Cadastro_contatos.Models.Contatos>

@{
    Layout = "_novoLayot";
}

<h1>Lista de Contatos</h1>

<nav class="navbar navbar-expand-sm " style="background-color:black;">
    <div class="container" style="color:white;">
        Você não possui acesso a muitas informações, somente essas.
    </div>

</nav>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                
      
              
            </td>
        </tr>
}
    </tbody>
</table>
